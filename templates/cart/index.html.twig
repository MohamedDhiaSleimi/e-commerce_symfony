{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4">Your Cart</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {% if items is empty %}
        <div class="alert alert-info">Your cart is currently empty.</div>
        <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">Continue Shopping</a>
    {% else %}
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.price|number_format(2) }} €</td>
                        <td>{{ (item.product.price * item.quantity)|number_format(2) }} €</td>
                        <td>
                            <a href="{{ path('app_cart_add', { id: item.product.id }) }}" class="btn btn-sm btn-success">+</a>
                            <a href="{{ path('app_cart_decrease', { id: item.product.id }) }}" class="btn btn-sm btn-warning">-</a>
                            <a href="{{ path('app_cart_remove', { id: item.product.id }) }}" class="btn btn-sm btn-danger">Remove</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <h4>Total: {{ total|number_format(2) }} €</h4>
            <div>
                <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger">Clear Cart</a>
                <a href="{{ path('app_checkout') }}" class="btn btn-primary">Proceed to Checkout</a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
