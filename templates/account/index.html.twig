{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-4">Welcome, {{ user.firstName }} {{ user.lastName }}</h2>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong> {{ user.email }}</li>
                <li class="list-group-item"><strong>Address:</strong> {{ user.address ?: 'Not provided' }}</li>
                <li class="list-group-item"><strong>Phone Number:</strong> {{ user.phoneNumber ?: 'Not provided' }}</li>
            </ul>

            <a href="{{ path('app_account_profile') }}" class="btn btn-primary mt-4">Edit Profile</a>
        </div>
    </div>
</div>
{% endblock %}
