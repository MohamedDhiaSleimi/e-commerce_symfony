{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - E-Commerce Store{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_category_index') }}">Categories</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
        </ol>
    </nav>
    
    <div class="row mb-4">
        <div class="col-md-4">
            {% if category.image %}
                <img src="{{ asset('uploads/categories/' ~ category.image) }}" class="img-fluid rounded" alt="{{ category.name }}">
            {% else %}
                <div class="placeholder-image bg-light d-flex align-items-center justify-content-center rounded" style="height: 250px;">
                    <i class="fas fa-folder fa-5x text-secondary"></i>
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <h1>{{ category.name }}</h1>
            <div class="mb-3">
                {{ category.description|raw }}
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3"><strong>{{ products.getTotalItemCount }}</strong> products</span>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Sort By
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_category_show', {'slug': category.slug, 'sort': 'name', 'direction': 'asc'}) }}">Name (A-Z)</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_category_show', {'slug': category.slug, 'sort': 'name', 'direction': 'desc'}) }}">Name (Z-A)</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_category_show', {'slug': category.slug, 'sort': 'price', 'direction': 'asc'}) }}">Price (Low to High)</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_category_show', {'slug': category.slug, 'sort': 'price', 'direction': 'desc'}) }}">Price (High to Low)</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_category_show', {'slug': category.slug, 'sort': 'createdAt', 'direction': 'desc'}) }}">Newest First</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {% for product in products %}
            <div class="col">
                <div class="card h-100">
                    {% if product.images %}
                        <img src="{{ asset('uploads/products/' ~ product.images) }}" class="card-img-top" alt="{{ product.name }}">
                    {% else %}
                        <div class="placeholder-image bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-secondary"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description|striptags|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 mb-0">${{ product.price }}</span>
                            <div>
                                <a href="{{ path('app_product_show', {'slug': product.slug}) }}" class="btn btn-sm btn-outline-primary">View</a>
                                <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-sm btn-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    No products available in this category at the moment.
                </div>
            </div>
        {% endfor %}
    </div>
    
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(products) }}
    </div>
{% endblock %}